# Production Environment Configuration

# Disable mock mode (use real APIs)
MOCK_MODE=false

# Server Configuration
NODE_ENV=production
PORT=4000
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://user:password@production-db:5432/studentapp

# Redis
REDIS_URL=redis://production-redis:6379

# JWT Authentication
JWT_SECRET=<GENERATE_STRONG_SECRET_HERE>
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=<GENERATE_STRONG_SECRET_HERE>
REFRESH_TOKEN_EXPIRES_IN=7d

# SSO Configuration
SSO_STRATEGY=saml
SSO_CALLBACK_URL=https://yourdomain.com/api/v1/auth/callback
SSO_ISSUER=<PROVIDED_BY_SCHOOL>
SSO_ENTRY_POINT=<PROVIDED_BY_SCHOOL>
SSO_CERT=<PROVIDED_BY_SCHOOL>

# External APIs
INTRANET_API_URL=<PROVIDED_BY_SCHOOL>
INTRANET_API_KEY=<PROVIDED_BY_SCHOOL>

BLACKBOARD_API_URL=<PROVIDED_BY_SCHOOL>
BLACKBOARD_API_KEY=<PROVIDED_BY_SCHOOL>
BLACKBOARD_API_SECRET=<PROVIDED_BY_SCHOOL>

# OpenAI
OPENAI_API_KEY=<YOUR_OPENAI_KEY>
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=info
