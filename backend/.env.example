# Server Configuration
NODE_ENV=development
PORT=4000
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/studentapp

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=7d

# SSO Configuration
SSO_STRATEGY=saml
SSO_CALLBACK_URL=http://localhost:4000/api/v1/auth/callback
SSO_ISSUER=https://school-sso-provider.com
SSO_ENTRY_POINT=https://school-sso-provider.com/saml/login
SSO_CERT=-----BEGIN CERTIFICATE-----\nYOUR_CERTIFICATE_HERE\n-----END CERTIFICATE-----

# External APIs - Intranet
INTRANET_API_URL=https://school-intranet-api.com
INTRANET_API_KEY=your-intranet-api-key

# External APIs - Blackboard
BLACKBOARD_API_URL=https://blackboard.school.edu
BLACKBOARD_API_KEY=your-blackboard-client-id
BLACKBOARD_API_SECRET=your-blackboard-client-secret

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
