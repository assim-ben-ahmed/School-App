# Test/Development Environment Configuration

# Enable mock mode (no real API keys needed)
MOCK_MODE=true
MOCK_DELAY_MS=500
MOCK_FAILURE_RATE=0.0

# Server Configuration
NODE_ENV=development
PORT=4000
API_PREFIX=/api/v1

# Database (use SQLite for testing or PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/studentapp_test

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication (test secrets)
JWT_SECRET=test-jwt-secret-key-for-development-only
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=test-refresh-token-secret-for-development-only
REFRESH_TOKEN_EXPIRES_IN=7d

# SSO Configuration (not used in mock mode)
SSO_STRATEGY=saml
SSO_CALLBACK_URL=http://localhost:4000/api/v1/auth/callback
SSO_ISSUER=mock-sso-provider
SSO_ENTRY_POINT=http://localhost:4000/mock-sso
SSO_CERT=mock-cert

# External APIs (not used in mock mode)
INTRANET_API_URL=http://mock-intranet
INTRANET_API_KEY=mock-key

BLACKBOARD_API_URL=http://mock-blackboard
BLACKBOARD_API_KEY=mock-client-id
BLACKBOARD_API_SECRET=mock-client-secret

# OpenAI (not used in mock mode)
OPENAI_API_KEY=mock-openai-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# Rate Limiting (relaxed for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
